@{
    ViewData["Title"] = "Subject";
}

@using SchoolSystem.WebApplication.Entities
@model SchoolSystem.WebApplication.Entities.LessonEntity


@using (Html.BeginForm("Create", "Lesson", FormMethod.Post))
{
    <div class="row">
                <div class="col-2"> @Html.LabelFor(m => m.Day)</div>
            <div class="col-10">
                @Html.DropDownListFor(x => x.Day, new SelectList(Enum.GetValues(typeof(DayOfTheWeekEntity))))
                 @Html.ValidationMessageFor(m => m.Day)
            </div>
    </div>
    <div class="row">
        <div class="col-2"> @Html.LabelFor(m => m.StartTime)</div>
        <div class="col-10">
 @Html.EditorFor(m => m.StartTime,
     "{0:hh\\:mm}",
     new { 
         @class = "form-control",
         placeholder = "hh:mm",
     })
           @Html.ValidationMessageFor(m => m.StartTime)
            </div>
    </div>
    
    <div class="row">
        <div class="col-2"> @Html.LabelFor(m => m.EndTime)</div>
      <div class="col-10">
     @Html.EditorFor(m => m.EndTime,
         "{0:hh\\:mm}",
         new { 
             @class = "form-control",
             placeholder = "hh:mm",
         })
                 </div>
                  @Html.ValidationMessageFor(m => m.EndTime)
    </div>

    <div class="row">
        <div class="col-2"> @Html.LabelFor(m => m.Subject)</div>
        <div class="col-10"> @Html.DropDownListFor(m => m.SubjectId, new SelectList(@ViewBag.Subjects, "Id", "Name"),  new {@class = "form-control"}) 
                       @Html.ValidationMessageFor(m => m.SubjectId)</div>
    </div>
    <input type="submit" value="SUBMIT" />
}