@{
    ViewData["Title"] = "Lesson";
}

@model SchoolSystem.WebApplication.Entities.LessonEntity

@using (Html.BeginForm("Edit", "Lesson", FormMethod.Post))
{
    <div class="row">
        @Html.LabelFor(m => m.Day) @Html.TextBoxFor(m => m.Day)
    </div>
    <div class="row">
        @Html.LabelFor(m => m.StartTime)   @Html.EditorFor(m => m.StartTime)
    </div>
    <div class="row">
        @Html.LabelFor(m => m.EndTime) @Html.EditorFor(m => m.EndTime)
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Subject) @Html.TextBoxFor(m => m.Subject)
    </div>
    <div class="row">
        <div class="col-2"> @Html.LabelFor(m => m.Subject)</div>
        <div class="col-10"> @Html.DropDownListFor(m => m.Subject, new SelectList(@ViewBag.Subjects, "Id", "Name"), "Subjects", new {@class = "form-control"}) </div>
       
    </div>
    <input type="submit" value="Create" />
}