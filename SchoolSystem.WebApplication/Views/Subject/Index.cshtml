@{
    ViewData["Title"] = "Subjects";
}

@model List<SchoolSystem.WebApplication.Entities.SubjectEntity>

<button class="btn btn-primary"><a href="Subject/Create">Create subject</a></button>

<table id="myTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                credits
            </th>
             <th>
                Teachers full name
            </th>
            <th>
                Action
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>
                    @subject.Name
                </td>
                <td>
                    @subject.Credits
                </td>
                <td>
                    @subject.HeadTeacher.FirstName @subject.HeadTeacher.LastName
                </td>
                <td>
                    <a href="Subject/Delete?subjectId=@subject.Id">
                        <i class="fas fa-trash-restore-alt"></i>
                    </a>
                </td>
                <td>
                <a href="@Url.Action("Edit", "Subject", new { id = subject.Id })"><i class="fas fa-user-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>